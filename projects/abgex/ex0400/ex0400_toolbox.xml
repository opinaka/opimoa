<!-- Indique à Blockly les blocs que l'on désire mettre à disposition -->
<!-- Si la balise <category> existe, le champs Blocky aura des scroll bar, 
     sinon, il n'y a pas de scroll bar. 
     Ici, il y a des balises <category> -->
    <category name="Logic" colour="%{BKY_LOGIC_HUE}">
      <block type="controls_if"></block>
      <block type="logic_compare"></block>
      <block type="logic_operation"></block>
      <block type="logic_negate"></block>
      <block type="logic_boolean"></block>
    </category>
    <category name="Loops" colour="%{BKY_LOOPS_HUE}">
      <block type="controls_repeat_ext">
        <value name="TIMES">
          <block type="math_number">
            <field name="NUM">10</field>
          </block>
        </value>
      </block>
      <block type="controls_whileUntil"></block>
    </category>
    <category name="Math" colour="%{BKY_MATH_HUE}">
      <block type="math_number">
        <field name="NUM">123</field>
      </block>
      <block type="math_arithmetic"></block>
      <block type="math_single"></block>
      <block type="math_number_property">
        <field name="PROPERTY">EVEN</field>
      </block>

      <block type="math_number_property">
        <field name="PROPERTY">DIVISIBLE_BY</field>
        <field name="NUMBER_TO_CHECK"><field name="NUM">2</field></field>
      </block>
    </category>
    <category name="Text" colour="%{BKY_TEXTS_HUE}">
      <block type="text"></block>
      <block type="text_length"></block>
      <block type="text_afficheln">
      </block>
    </category>
    <category name="Variables" custom="VARIABLE" colour="%{BKY_VARIABLES_HUE}">
    </category>
    <category name="Puzzle" colour="%{BKY_TEXTS_HUE}">

      <block type="puzzle_test1"></block>
      <block type="puzzle_test2"></block>
      <block type="puzzle_test3"></block>
      <block type="puzzle_test4"></block>
      <block type="puzzle_noms"></block>

      <block type="image_head"></block>
      <block type="image_pa_cherix"></block>
      <block type="image_t_zwissig"></block>
      <block type="image_b_gisin"></block>
    </category>
    <category name="Factory" colour="%{BKY_TEXTS_HUE}">
      <block type="image_puzzle_test1"></block>
      <block type="image_puzzle_test2"></block>
      <block type="image_puzzle_test3"></block>
      <block type="image_puzzle_test4"></block>
    </category>

